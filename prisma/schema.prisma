generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  studentId       Int              @id @default(autoincrement())
  studentName     String           @unique
  level           String
  birthdate       DateTime
  phone           String
  nationality     String
  residence       String
  gender          String
  admissiondate   DateTime         @default(now())
  academicRecords AcademicRecord?
  interventions   Intervention?
  behaviorrecords BehaviorRecords?
  healthrecord    HealthRecord?
  financialstatus FinancialStatus?

  @@map("Student")
}

model Subject {
  subjectId      Int              @id @default(autoincrement())
  subjectName    String
  academicrecord AcademicRecord[]
}

model AcademicRecord {
  recordId   Int     @id @default(autoincrement())
  department String
  subject    Subject @relation(fields: [subjectId], references: [subjectId])
  subjectId  Int
  semester   String
  year       Int
  gpa        String
  attendance String
  score      String
  studentId  Int     @unique
  student    Student @relation(fields: [studentId], references: [studentId])

  @@map("AcademicRecord")
}

model Settings {
  settingsId          Int      @id @default(autoincrement())
  schoolName          String
  schoolPhone         String
  schoolWebsite       String
  schoolLocation      String
  schoolPostalAddress String
  date                DateTime @default(now())
}

model Intervention {
  interventionId Int      @id @default(autoincrement())
  type           String
  date           DateTime
  outcome        String
  studentId      Int      @unique
  student        Student  @relation(fields: [studentId], references: [studentId])

  @@map("Intervention")
}

model User {
  userId        Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String
  roleId        Int
  role          Role      @relation(fields: [roleId], references: [roleId])
  emailVerified DateTime? @map("email_verified")
  image         String?

  @@map("User")
}

model BehaviorRecords {
  behaviorId  Int      @id @default(autoincrement())
  student     Student  @relation(fields: [studentId], references: [studentId])
  studentId   Int      @unique
  description String   @db.Text
  date        DateTime
}

model HealthRecord {
  healthId  Int      @id @default(autoincrement())
  student   Student  @relation(fields: [studentId], references: [studentId])
  studentId Int      @unique
  condition String   @db.Text
  date      DateTime @default(now())
}

model FinancialStatus {
  financialId Int     @id @default(autoincrement())
  student     Student @relation(fields: [studentId], references: [studentId])
  studentId   Int     @unique
  status      String
  amount      String
}

model Role {
  roleId   Int    @id @default(autoincrement())
  roleName String
  users    User[]
}
